<script>
  (function () {
    // Zielzeit: 27.12.2025 16:30 (lokale Zeit des Besuchers)
    const target = new Date(2025, 11, 27, 16, 30, 0); // 11 = Dezember

    const elDays = document.getElementById("cd-days");
    const elHours = document.getElementById("cd-hours");
    const elMinutes = document.getElementById("cd-minutes");
    const elSeconds = document.getElementById("cd-seconds");
    const elStatus = document.getElementById("cd-status");

    function pad2(n) { return String(n).padStart(2, "0"); }

    function tick() {
      const now = new Date();
      let diff = target - now;

      if (diff <= 0) {
        elDays.textContent = "0";
        elHours.textContent = "00";
        elMinutes.textContent = "00";
        elSeconds.textContent = "00";
        elStatus.textContent = "ðŸŽ‰ Es geht los!";
        document.documentElement.classList.add("party-on");
        return;
      }

      const totalSeconds = Math.floor(diff / 1000);
      const days = Math.floor(totalSeconds / (24 * 3600));
      const hours = Math.floor((totalSeconds % (24 * 3600)) / 3600);
      const minutes = Math.floor((totalSeconds % 3600) / 60);
      const seconds = totalSeconds % 60;

      elDays.textContent = String(days);
      elHours.textContent = pad2(hours);
      elMinutes.textContent = pad2(minutes);
      elSeconds.textContent = pad2(seconds);

      elStatus.textContent = "Countdown lÃ¤uft";
    }

    tick();
    setInterval(tick, 1000);
  })();
</script>
